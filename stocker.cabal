name:                stocker
version:             0.1.0.0
synopsis:            Collecting and filtering stocks of interest
description:         a stock market analyzing tool
homepage:            https://github.com/vimster/stocker
-- license:             
license-file:        LICENSE
author:              vimster
maintainer:          mr.potsdam@gmx.de
-- copyright:           
category:            Web
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

Test-Suite test-melody
  type:               exitcode-stdio-1.0
  main-is:            Main.hs
  hs-source-dirs:     test
  build-depends:      base >=4.6 && <4.7,
                      test-framework,
                      test-framework-hunit,
                      HUnit,
                      containers == 0.5.*

executable stocker
  ghc-options:         -Wall
  main-is:             Main.hs
  -- other-modules:       
  -- other-extensions:    
  hs-source-dirs:      src
  default-language:    Haskell2010
  build-depends:       base >=4.7 && <4.8,
                       aeson,
                       time,
                       bytestring,
                       uri-encode,
                       old-locale,
                       text,
                       vector,
                       split,
                       filepath,
                       directory,
                       cassava,
                       HaskellNet-SSL,
                       configurator,
                       containers,
                       http-conduit,
                       HTTP


